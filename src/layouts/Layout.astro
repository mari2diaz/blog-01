---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/public/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=es6"></script>
    <script
      id="MathJax-script"
      async
      src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"
    ></script>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  html {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Courier New,
      Courier,
      monospace;
    background: #fff;
    letter-spacing: -0.025rem;
  }

  body,
  figure {
    margin: 0;
    padding: 0;
  }

  ul {
    color: #333;
    font-size: 0.8rem;
    line-height: 1.5;
    margin: 0;
    margin-bottom: 4px;
    list-style: none;
    padding-left: 1.5em;
    counter-reset: list-counter;
  }

  ul li {
    counter-increment: list-counter;
    margin-bottom: 4px;
  }

  ul li::before {
    content: counter(list-counter) ". ";
    font-weight: bold;
    margin-right: 0.5em;
  }

  h1,
  h2,
  h3,
  h4 {
    margin: 0;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      Oxygen,
      Ubuntu,
      Cantarell,
      "Open Sans",
      "Helvetica Neue",
      sans-serif;
  }

  p {
    color: #333;
    font-size: 0.8rem;
    line-height: 1.5;
    margin: 0;
    margin-bottom: 4px;
    text-wrap: pretty;
  }
</style>
